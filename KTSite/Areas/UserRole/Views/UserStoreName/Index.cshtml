@model IEnumerable<UserStoreName>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Stores List </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="AddStore"><i class="fas fa-plus"></i> &nbsp; Create New Store</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>User Name</th>
                    <th>Store Name</th>
                    <th></th>
            </thead>

            @foreach (UserStoreName userStoreName in Model)
            {
        <tr>
            <td>@userStoreName.UserName</td>
            <td>@userStoreName.StoreName</td>
            @if (!ViewBag.existOrder(userStoreName.Id.ToString()))
            {
              <td>
                <div class="text-center">
                  <a href="/UserRole/UserStoreName/UpdateStore/@userStoreName.Id" class="btn btn-success text-white" style="cursor:pointer">
                    <i class="fas fa-edit"></i>
                  </a>
                </div>
               </td>
             }
            </tr>
            }

        </table>
    </div>
</div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable({ "order": [[0, "desc"]] });
            });</script>
    }


