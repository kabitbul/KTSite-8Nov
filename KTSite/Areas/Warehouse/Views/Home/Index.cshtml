@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h1 class="display-4" style="color:blue;font-size:40px">Welcome Back, @ViewBag.Name!</h1>
</div>
<div class="col-12" style="font:bolder">
    <div class="text-left display-3 p-4 border rounded col-5" style="border-bottom-width:5px">
        <h1 style="font-size: 20px">
            <img src="~/Images/Coin.jpg" alt="Site Logo" style="height:30px; width: 30px" />
        @ViewBag.Name, Current Warehouse Balance is : @ViewBag.Balance.ToString("0.00")$</h1>
        @if (ViewBag.Amount >= 0)
        {
            <h1 style="font-size: 20px">Last Payment was placed in @ViewBag.PayDate.ToString("dd/MM/yyyy") For @ViewBag.Amount$</h1>
        }
    </div>
    @if (ViewBag.WaitingForProcess > 0)
    {
<div class="text-left display-3 p-4 border rounded col-5">
    <h1 style="font-size: 20px">
        <img src="~/Images/BellNotification.jpg" alt="Site Logo" style="height:23px; width: 30px" />
    You have @ViewBag.WaitingForProcess Orders Without Tracking number.</h1>
</div>
        
    }
    @if (ViewBag.ExistProgress)
    {
<div class="text-left display-3 p-4 border rounded col-5">
    <h1 style="font-size: 20px">
        <img src="~/Images/BellNotification.jpg" alt="Site Logo" style="height:23px; width: 30px" />
    Pay Attention, you have Orders "In Progress"</h1>
</div>        
    }
    @if (ViewBag.missingWeightCount > 0)
    {
<div class="text-left display-3 p-4 border rounded col-5">
    <h1 style="font-size: 20px">
        <img src="~/Images/BellNotification.jpg" alt="Site Logo" style="height:23px; width: 30px" />
    You have @ViewBag.missingWeightCount  Products Without Weight.</h1>
</div>
    }
    @if (ViewBag.WaitingForReturnLabel > 0)
    {
<div class="text-left display-3 p-4 border rounded col-5">
    <h1 style="font-size: 20px">
        <img src="~/Images/BellNotification.jpg" alt="Site Logo" style="height:23px; width: 30px" />
    You have @ViewBag.WaitingForReturnLabel  returns , please provide return label.</h1>
</div>
    }

</div>
<div>
	<div id="chartContainer" style="height: 370px; width: 70%;"></div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</div>
@section Scripts{
    <script>
window.onload = function () {
    CanvasJS.addColorSet("greenShades",
        [//colorSet Array
            "#3CB371"
        ]);
var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
    colorSet: "greenShades",
	title: {
		text: "Number Of Sold Items Per Day In The Last Month"
	},
	axisY: {
		title: "No. of Items"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
    </script>
}