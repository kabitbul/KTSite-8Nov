@model IEnumerable<ReturnLabel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<br />
<div class="container">
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <div id="NoLabel">
                <input type="checkbox" id="pos" value=true />  Show Without Labels Only
            </div>
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Return Id</th>
                    <th>Order Id</th>
                    <th>Customer Name</th>
                    <th>File Name</th>
                    <th>Return Link</th>
                    <th>Comments To Warehouse</th>
                    <th>Date Created</th>
                    <th></th>
            </thead>
            @foreach (ReturnLabel returnLabel in Model)
            {
                <tr>
                    <td>@returnLabel.Id</td>
                    <td>@returnLabel.OrderId</td>
                    <td>@ViewBag.getCustName(returnLabel.OrderId.ToString())</td>
                    <td>@returnLabel.FileName</td>
                    @if (returnLabel.FileURL != null)
                    {
                        <td><a href="@Html.DisplayFor(model => @returnLabel.FileURL)">Download Label Here</a></td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td>@returnLabel.CommentsToWarehouse</td>
                    <td>@returnLabel.DateCreated.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="text-center">
                            <a href="/Warehouse/ReturnLabelWarehouse/UpdateReturnLabel/@returnLabel.Id" class="btn btn-success text-white" style="cursor:pointer">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable({ "order": [[0, "desc"]] });
            });</script>
        <script>
            $.fn.dataTable.ext.search.push(
                function (settings, data, dataIndex) {
                    var linkLabel = data[4];
                    if ($('#pos').prop("checked") == true && linkLabel == "") {
                        return true;
                    } else if ($('#pos').prop("checked") == false) {
                        return true;
                    }
                    else { return false; }
                }
            );
            $('input:checkbox').on('change', function () {
                var table = $('#tblData').DataTable();
                table.draw();
            });</script>
    }


