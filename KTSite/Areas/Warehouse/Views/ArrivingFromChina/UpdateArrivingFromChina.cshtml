
@model KTSite.Models.ArrivingFromChinaVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Update Arrived Shipment";
}

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="col-8">
                    <input type="hidden" asp-for="arrivingFromChina.Id" class="form-control" />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="arrivingFromChina.ProductId">Product</label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.arrivingFromChina.ProductId, Model.ProductList, "Select Product",
                                 new { @class = "form-control", @disabled = "disabled" })
                        <span asp-validation-for="arrivingFromChina.ProductId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="arrivingFromChina.Quantity">Quantity</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="arrivingFromChina.Quantity" class="form-control" />
                        <span asp-validation-for="arrivingFromChina.Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="arrivingFromChina.Comments">Comments</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="arrivingFromChina.Comments" class="form-control" />
                        <span asp-validation-for="arrivingFromChina.Comments" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="arrivingFromChina.ProductId" class="form-control" />
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="arrivingFromChina.NumOfBoxes" class="form-control" />
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="arrivingFromChina.DateArriving" class="form-control" />
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="arrivingFromChina.UpdatedByAdmin" class="form-control" />
                </div>
            </div>
                <div class="col-8 pt-4">
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</form>

