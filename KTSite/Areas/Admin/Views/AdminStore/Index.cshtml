@model IEnumerable<UserStoreName>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-4 text-right">
      <h2 class="text-primary">Admin Stores List </h2>
     </div>
    <div class="col-2 text-center">
        
    </div>
    <div class="col-6 text-center">
        <a class="btn btn-primary" asp-action="AddAdminStore" style="background-color:forestgreen"><i class="fas fa-plus"></i> &nbsp; Create New Store</a>
    </div>
</div>

<div class="row">
    <div class="col-6"></div>
    <div class="col-6 text-center">
        <a class="btn btn-primary" asp-action="AllUsersStores" style="background-color:darkslateblue"><i class="fas fa-eye"></i> &nbsp; List Of Users Stores</a>
    </div>
</div>

    <br />
    <div class="container p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Admin Stores</th>
                    <th></th>
            </thead>

            @foreach (UserStoreName userStoreName in Model)
            {

                @if (userStoreName.IsAdminStore)
                {
                    <tr>
                        <td>@userStoreName.StoreName</td>
                        @*<td>
                            <a onclick=Delete("/Admin/Category/Delete/@userStoreName.Id") class="btn btn-danger text-white" style="cursor:pointer">
                                <i class="fas fa-trash-alt"></i>&nbsp;
                            </a>
                        </td>*@
                    </tr>
                }
            }

        </table>
    </div>

    @section Scripts{
        <script src="~/js/AdminStore.js"></script>
    }

