@model IEnumerable<PaymentSentAddress>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Payment Type List </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="AddPaymentType" style="background-color:forestgreen"><i class="fas fa-plus"></i> &nbsp; Add Admin Payment Type</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>User</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Payment Type</th>
                    <th></th>
</thead>

            @foreach (PaymentSentAddress paymentSentAddress in Model)
            {
        <tr>
            <td>@ViewBag.getUserName(paymentSentAddress.UserNameId)</td>
            <td>@ViewBag.getName(paymentSentAddress.UserNameId)</td>
            <td>@paymentSentAddress.PaymentTypeAddress</td>
            <td>@paymentSentAddress.PaymentType</td>
            <td>
                <div class="text-center">
                    <a href="/Admin/PaymentSentAddress/AddPaymentType/@paymentSentAddress.Id" class="btn btn-success text-white" style="cursor:pointer">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            </td>
        </tr>
            }

        </table>
    </div>
</div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable({ "order": [[0, "desc"]] });
            });</script>
    }


