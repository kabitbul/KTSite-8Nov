@model IEnumerable<ProductStatistics>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product Statistics </h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Product</th>
                <th>7 Days ago</th>
                <th>6 Days ago</th>
                <th>5 Days ago</th>
                <th>4 Days ago</th>
                <th>3 Days ago</th>
                <th>2 Days ago</th>
                <th>Yesterday</th>
                <th>Today</th>
                <th>Weekly Average</th>
                <th></th>
            </tr>
        </thead>
        @foreach (ProductStatistics productStatistics in Model)
        {
    <tr>
        <td>@ViewBag.getProductName(productStatistics.ProductId)</td>
        <td>@productStatistics.SevenDays</td>
        <td>@productStatistics.SixDays</td>
        <td>@productStatistics.FiveDays</td>
        <td>@productStatistics.FourDays</td>
        <td>@productStatistics.ThreeDays</td>
        <td>@productStatistics.TwoDays</td>
        <td>@productStatistics.Yesterday</td>
        <td>@productStatistics.Today</td>
        <td>@productStatistics.WeeklyAverage.ToString("0.00")</td>
        <td>
            <div class="text-center">
                <a href="/Admin/ProductStatistics/ProductGraph/@productStatistics.ProductId" class="btn btn-success text-white" style="cursor:pointer">
                    <i class="fas fa-chart-bar"></i>
                </a>
            </div>
        </td>
    </tr>
        }
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable({ "order": [[0, "desc"]]});
        });</script>
    @*<script src="~/js/product.js"></script>*@
}


