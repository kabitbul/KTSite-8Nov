@model InventoryAnalysis
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Check Inventory </h2>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="AvgDays">Average Of Last Days</label>
        </div>
        <div class="col-4">
            <input asp-for="AvgDays" class="form-control" />
            <span asp-validation-for="AvgDays" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="TimeToArrive">Number Of expected Shipping Days</label>
        </div>
        <div class="col-4">
            <input asp-for="TimeToArrive" class="form-control" />
            <span asp-validation-for="TimeToArrive" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-4">
            @*<button type="submit" class="btn btn-primary form-control">Calculate</button>*@
            <button type="button" class="btn btn-primary form-control" onclick="callIndex()">Calculate</button>
        </div>
    </div>
</div>
@section Scripts{
    <script>
   function callIndex() {
       var avgDays = document.getElementById('AvgDays').value;
       var TimeToArrive = document.getElementById('TimeToArrive').value;
       window.location.href = '/Admin/InventoryAnalysis/Index/' + avgDays + '_' + TimeToArrive;
}
    </script>
}


